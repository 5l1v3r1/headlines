- @title = "User | #{@user.login} | Saved Headlines"

%h2= link_to @user.login, @user
.clearfix
  .pull-left
    .lead.text-muted
      Saved Headlines

  .sort-tools.pull-right
    .btn-group.source-picker
      = link_to "Recent", params.merge({page: 1, order: :new}), class: default_button_toggle(:order, :new, true)
      = link_to "Best", params.merge({page: 1, order: :top}), class: default_button_toggle(:order, :top)

= render partial: 'headlines/headlines_table', locals: {headlines: @headlines}