- @title = @headline.name

.jumbotron.single-headline
  %h1= tooltipped_headline @headline, inner_linked: true
  %h2
    #show-vote-count.count.text-muted
      = pluralize @headline.vote_count, "vote"

    - unless VOTING_DISABLED
      #show-vote-box.votebox= render partial: "headlines/headline_votebox", locals: {headline: @headline, vote_statuses: VoteStatusCollection.new(current_user, [@headline])}
.row
  .col-md-6
    %h3.comments-title
      Comments
      .pull-right
        = tweet_button url: headline_url(@headline), text: @headline.name, lang: 'en', via: nil, dnt: true, size: 'large', no_js: true
    #headline-comments
      = render partial: 'comments/comments', locals: {headline: @headline}
  .col-md-6
    - if @headline.creator
      .well
        %h4.text-muted
          discovered by #{link_to @headline.creator.login, @headline.creator}
          .pull-right #{timeago_tag @headline.created_at}

    - if @headline.source_headlines.length > 0
      .well
        %h4.text-muted
          Mashup Sources
        %ul.source-headlines-list.list-unstyled
          - @headline.source_headlines.each do |source_headline|
            %li
              .pull-right
                = link_to source_headline.article_url, class: "btn btn-default btn-xs" do
                  %i.fa.fa-globe
                  Read
                = link_to source_headline, class: "btn btn-default btn-xs" do
                  %i.fa.fa-gear
                  More Mashups
              .source-headline
                = link_to source_headline.name, source_headline.article_url
              .source
                = source_image_tag source_headline.source
                = source_headline.source.name

    - if @headline.vote_count < 2 && @headline.creator == current_user
      .text-right
        %small= link_to "Delete Headline", @headline, method: :delete, confirm: "Are you sure you want to delete this headline?", class: 'text-muted'